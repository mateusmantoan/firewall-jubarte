#basic instalation for all nodes of cluster

DOCKER_SCRIPTS=https://get.docker.com
APT_KEY=https://packages.cloud.google.com/apt/doc/apt-key.gpg
REPOSITORY_LINK=http://apt.kubernetes.io/
REPOSITORY_VERSION=kubernetes-xenial

apt-get remove iptables
apt-get update && apt-get install -y curl \
apt-transport-https iproute2 iptables
curl -fsSL $DOCKER_SCRIPTS | bash
curl -s $APT_KEY | apt-key add -
echo "deb $REPOSITORY_LINK $REPOSITORY_VERSION main" > \
/etc/apt/sources.list.d/kubernetes.list
apt-get update && apt-get install -y kubelet kubeadm kubectl
