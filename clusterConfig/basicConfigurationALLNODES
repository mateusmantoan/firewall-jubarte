#basic instalation for all nodes of cluster

#script off official docker site
DOCKER_SCRIPT=https://get.docker.com

#install packets
apt-get update && apt-get install -y curl \
apt-transport-https \
iproute2 \
iptables-persistent \
sshpass
curl -fsSL $DOCKER_SCRIPT | bash
apt clean

#configure ssh for remote access
echo "PermitRootLogin yes" >> /etc/ssh/sshd_config
systemctl restart ssh

#create manager files
touch /etc/jubarte/hostsfile
touch /etc/jubarte/iptables-actual
touch /etc/jubarte/iptables-actual_TEMP
touch /etc/jubarte/snort-status
touch /etc/jubarte/squid-status
mkdir /etc/jubarte/logs/
mkdir /etc/jubarte/logs/tcpdump
mkdir /etc/jubarte/logs/nmap
mkdir /etc/jubarte/logs/snort
iptables-save >> /etc/jubarte/iptables-clean

